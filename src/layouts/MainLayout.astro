  gtag('js', new Date());
    //@ts-ignore
  gtag('config', 'G-NMTRKRDQZV');
</script>
    <body class="bg-main text-main">
        <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WZ9H8GJP"
height="0" width="0" class="hidden"></iframe></noscript>
