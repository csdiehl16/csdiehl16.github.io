        <div class="flex flex-col min-h-screen">
            {showHeader && <Header />}
            <main class={`grow w-full mx-auto ${!fullWidth ? "max-w-3xl" : ""}`}>
                <slot />
            </main>
        </div>
    </body>
</html>
