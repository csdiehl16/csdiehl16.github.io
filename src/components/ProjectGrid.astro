---
import { projectData } from "./projectData"
---

<div class="p-4 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {projectData.map((p, index) => (
        <div class="group relative overflow-hidden rounded-lg shadow-md cursor-pointer h-[300px]">
            <img
                alt={p.description}
                src={p.imageLink}
                class="w-full h-full object-cover rounded-lg transition-transform duration-300 ease-in-out group-hover:scale-105"
            />
            <a href={p.link} target="_blank" rel="noreferrer">
                <div class="absolute inset-0 flex items-center justify-center bg-gradient-to-br from-accent/60 to-gunmetal/60 text-white text-xl text-center p-4 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-300 ease-in-out">
                    <div>
                        <p class="text-sm font-bold">— {p.client} —</p>
                        <p class="font-semibold text-base text-white">{p.name}</p>
                    </div>
                </div>
            </a>
        </div>
    ))}
</div>
